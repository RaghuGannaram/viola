# ================================
# 1. REGISTRY & AUTHENTICATION
# ================================
registry=https://registry.npmjs.org/             # Default public npm registry.
                                                 # Change per-scope using @scope:registry.
always-auth=false                                # Default: false
                                                 # true â†’ always send credentials (needed for private registries).
                                                 # false â†’ send only when needed.

strict-ssl=true                                  # Default: true
                                                 # true â†’ require valid SSL certs.
                                                 # false â†’ allow self-signed/unverified SSL.

# Auth tokens / credentials (default: none, you must configure if private registry)
# //registry.example.com/:_authToken=${NPM_TOKEN}

# proxy, https-proxy, noproxy (default: none)
# proxy=
# https-proxy=
# noproxy=

# SSL custom certs (default: none)
# cafile=
# ca=
# cert=
# key=

# otp=                                             # Default: none. One-time password for 2FA registries.

# ================================
# 2. DEPENDENCY RESOLUTION & INSTALL
# ================================
legacy-peer-deps=false                           # Default: false
                                                 # true â†’ ignore peer dep conflicts (npm v6 behavior).
                                                 # false â†’ enforce peer dep validation.

strict-peer-deps=false                           # Default: false
                                                 # true â†’ fail install on unresolved peer deps.
                                                 # false â†’ install anyway.

force=false                                      # Default: false
                                                 # true â†’ force re-download deps, ignore cache/lock.
                                                 # false â†’ normal resolution.

prefer-offline=false                             # Default: false
                                                 # true â†’ prefer cache, avoid network.
                                                 # false â†’ normal resolution.

prefer-online=false                              # Default: false
                                                 # true â†’ prefer hitting network even if cache is valid.
                                                 # false â†’ normal resolution.

offline=false                                    # Default: false
                                                 # true â†’ fail if deps require network.
                                                 # false â†’ fetch from registry as needed.

audit=true                                       # Default: true
                                                 # true â†’ run security audit after install.
                                                 # false â†’ skip audit.

audit-level=low                                  # Default: low
                                                 # low â†’ report all severities.
                                                 # moderate/high/critical â†’ filter by severity.

fund=true                                        # Default: true
                                                 # true â†’ show "fund this package" messages.
                                                 # false â†’ suppress.

package-lock=true                                # Default: true
                                                 # true â†’ generate package-lock.json.
                                                 # false â†’ skip lockfile.

package-lock-only=false                          # Default: false
                                                 # true â†’ only update lockfile, donâ€™t install.
                                                 # false â†’ normal install.

shrinkwrap=false                                 # Default: false
                                                 # true â†’ use legacy npm-shrinkwrap.json.
                                                 # false â†’ use modern package-lock.json.

save-exact=false                                 # Default: false
                                                 # true â†’ save dependencies without ^ or ~.
                                                 # false â†’ use prefix.

save-prefix=^                                    # Default: ^
                                                 # ^ â†’ allow minor/patch upgrades.
                                                 # ~ â†’ allow patch upgrades only.
                                                 # (empty) â†’ exact version.

omit=                                            # Default: none
                                                 # Comma-separated: dev,optional,peer
                                                 # Skips installing those dependency types.

include=dev,optional                             # Default: dev,optional
                                                 # Explicitly include dependency types.

engine-strict=true                               # Default: false
                                                 # true â†’ enforce Node/npm versions in package.json engines.
                                                 # false â†’ just warn.

workspaces=true                                  # Default: true (auto-detect)
                                                 # true â†’ enable workspace support in monorepos.

install-strategy=hoisted                         # Default: hoisted
                                                 # hoisted â†’ flatten deps.
                                                 # nested â†’ per-package node_modules.
                                                 # shallow â†’ shallow deps only.

lockfile-version=                                # Default: auto
                                                 # 1/2/3 depending on npm version.
                                                 # Typically do not override.

# ================================
# 3. SCRIPTS & LIFECYCLE
# ================================
ignore-scripts=false                             # Default: false
                                                 # true â†’ skip all lifecycle scripts (postinstall, prepare, etc.).
                                                 # false â†’ run scripts.

scripts-prepend-node-path=auto                   # Default: auto
                                                 # auto â†’ add Node to PATH if mismatch detected.
                                                 # true â†’ always prepend.
                                                 # false â†’ never prepend.

unsafe-perm=false                                # Default: false (true if root)
                                                 # true â†’ allow root scripts to run as root (needed in Docker).
                                                 # false â†’ drop privileges.

foreground-scripts=false                         # Default: false
                                                 # true â†’ stream script output in foreground.
                                                 # false â†’ buffer output.

# node-options=                                  # Default: empty
                                                 # Pass Node CLI flags (e.g. --max-old-space-size=4096).

# ================================
# 4. CACHE & PERFORMANCE
# ================================
cache-min=10                                     # Default: 10 (seconds)
                                                 # Minimum time before npm checks registry again.

cache-max=Infinity                               # Default: Infinity
                                                 # Max staleness allowed before refetch.

prefer-dedupe=false                              # Default: false
                                                 # true â†’ attempt to dedupe dependencies across workspaces.
                                                 # false â†’ normal.

maxsockets=50                                    # Default: 50
                                                 # Max concurrent HTTP requests.

fetch-retries=2                                  # Default: 2
                                                 # Retry attempts on failed fetch.

fetch-retry-factor=10                            # Default: 10
                                                 # Exponential backoff multiplier.

fetch-retry-mintimeout=10000                     # Default: 10000ms (10s)
                                                 # Minimum retry delay.

fetch-retry-maxtimeout=60000                     # Default: 60000ms (60s)
                                                 # Maximum retry delay.

fetch-timeout=300000                             # Default: 300000ms (5min)
                                                 # Per-request timeout.

# ================================
# 5. LOGGING & USER EXPERIENCE
# ================================
loglevel=silly                                   # Default: notice
                                                 # silent/error/warn/notice/http/timing/info/verbose/silly

progress=true                                    # Default: true
                                                 # true â†’ show progress bar.
                                                 # false â†’ disable.

color=auto                                       # Default: auto
                                                 # always â†’ force colors.
                                                 # never â†’ no colors.
                                                 # auto â†’ detect TTY.

# ================================
# 6. PUBLISHING / RELEASE
# ================================
access=public                                    # Default: public
                                                 # public â†’ anyone can install.
                                                 # restricted â†’ only org users.

tag=latest                                       # Default: latest
                                                 # Dist-tag assigned to publishes.

# publish-branch=                                # Default: none
                                                 # Restrict publishing to this branch.

allow-same-version=false                         # Default: false
                                                 # true â†’ allow republishing same version.
                                                 # false â†’ error.

sign-git-tag=false                               # Default: false
                                                 # true â†’ sign git tags with GPG.
                                                 # false â†’ unsigned tags.

git-tag-version=true                             # Default: true
                                                 # true â†’ create git tag on `npm version`.
                                                 # false â†’ skip tagging.

dry-run=false                                    # Default: false
                                                 # true â†’ simulate publish/install.
                                                 # false â†’ actually run.

# ================================
# 7. SECURITY / INTEGRITY
# ================================
ignore-workspace-root-check=false                # Default: false
                                                 # true â†’ allow install in root of monorepo.
                                                 # false â†’ block.

prefer-symlink=false                             # Default: false
                                                 # true â†’ symlink native deps.
                                                 # false â†’ normal copy.

