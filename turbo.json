{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"dependsOn": ["^dev"],
			"outputs": []
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".svelte-kit/**", "build/**"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"outputs": ["eslint-stats/**", "eslint-results/**"]
		},
		"test": {
			"dependsOn": ["^test"],
			"outputs": ["coverage/**", "test-results/**"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"outputs": []
		}
	},
	"globalDependencies": [".env", "tsconfig.base.json"]
}
